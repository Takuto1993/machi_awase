<p id="notice"></p>
<div class="container">
 <div class="row">
  <div class ="mx-auto">
    <h3><i class="fas fa-handshake"></i>参加した待ち合わせ一覧</h3>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th>投稿者</th>
            <th>件名</th>
            <th>コメント数</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
        <% @join_places.each do |join_place| %>
          <tr>
            <td>
              <%= link_to user_path(join_place.user.id) do %>
               <%= image_tag join_place.user.get_profile_image(50,50) %><br>
               <%= join_place.user.name %>
              <% end %>
            </td>
            <td>
              <%= link_to place_path(join_place.place.id) do %>
                <%= join_place.place.subject %>
              <% end %>
            </td>
            <td>
              <%= "#{join_place.place.place_comments.count} コメント" %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
  </div>
 </div>
</div>
