<p id="notice"></p>
<div class="container">
 <div class="row">
  <div class ="mx-auto">
    <h3><%= @user.name %>さんのマイページ
    </h3>
    <%= link_to "新規投稿", "/places/new" %>
    <%= "　" %>
    <%= link_to "会員情報編集", edit_user_path(@user.id) %>

      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th></th>
            <th></th>
            <th colspan="2"></th>
          </tr>
        </thead>
        <tbody>
        <% @places.each do |place| %>
          <tr>
            <td>
              <%= link_to place_path(place.id) do %>
