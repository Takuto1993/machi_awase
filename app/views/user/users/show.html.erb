<p id="notice"></p>
<div class="container px-5 px-sm-0">
 <div class="row">
  <div class="col-md-3">
    <h2>ユーザー情報</h2>
    <%= image_tag @user.get_profile_image(250,250) %>
    <table class="table">
     <tr>
      <th>ユーザーネーム</th>
      <th><%= @user.name %></th>
     </tr>
    </table>
    <% if @user == current_user %>
      <div class="row">
        <%= link_to "/places/new", class:"btn btn-success btn-block" do %>
         <%= "新規投稿" %>
        <% end %>
       <%= link_to edit_user_path(@user), class:"btn btn-outline-secondary btn-block" do %>
        <% "ユーザー情報編集" %>
       <% end %>
       <%= link_to "/join_places", class:"btn btn-info btn-block" do %>
        <%= "参加した待ち合わせ一覧" %>
       <% end %>
       <%= link_to  "/nice_coupon ", class:"btn btn-primary btn-block" do %>
        <%= "❤︎いいねしたクーポン一覧" %>
       <% end %>
      </div>
    <% end %>
  </div>
  <div class ="col-md-8 offset-md-1">
    <h3>
      <%= @user.name %>さんのマイページ
    </h3>
      <table class='table table-hover table-inverse'>
       <% if @user == current_user %>
        <thead>
          <tr>
            <th><%= link_to "新規投稿", "/places/new" %></th>
            <th><%= link_to "会員情報編集", edit_user_path(@user.id) %></th>
            <th><%= link_to "参加した待ち合わせ一覧", "/join_places" %></th>
            <th><%= link_to "❤︎いいねしたクーポン一覧", "/nice_coupons" %></th>
            <th colspan="4"></th>
          </tr>
        </thead>
       <% end %>

        <thead>
          <tr>
            <th>投稿者</th>
            <th>件名</th>
            <th>参加人数</th>
            <th>コメント数</th>
            <th colspan="4"></th>
          </tr>
        </thead>

        <% @places.each do |place| %>
          <tr>
            <td>
              <%= link_to user_path(place.user.id) do %>
               <%= image_tag @user.get_profile_image(50,50) %>
               <%= place.user.name %>
              <% end %>
            </td>
            <td>
              <%= link_to place_path(place.id) do %>
                <%= place.subject %>
              <% end %>
            </td>
            <td>
              <%= "#{place.join_places.count}人" %>
            </td>
            <td>
              <%= "#{place.place_comments.count} コメント" %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
  </div>
 </div>
</div>

