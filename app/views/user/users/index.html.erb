<p id="notice"></p>
<div class="container">
 <div class="row">
  <div class ="mx-auto">
    <h3>ユーザー一覧</h3>

    <% #検索フォーム %>
    <%= form_tag({controller:"users",action:"index"}, method: :get) do %>
     <%= text_field_tag :search %>
     <%= submit_tag '検索する' %>
    <% end %>

      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th></th>
            <th>ユーザーネーム</th>
            <th>待ち合わせ件数</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
        <% @users.each do |user| %>
          <tr>
            <td>
              <%= link_to user_path(user.id) do %>
               <%= image_tag user.get_profile_image(50,50) %>
              <% end %>
            </td>
            <td>
              <%= link_to user_path(user.id) do %>
                <%= user.name %>
              <% end %>
            </td>
            <td>
              <%= "#{user.places.count}件" %>
            </td>
            <td colspan="3"></td>
          </tr>
        <% end %>
        </tbody>
      </table>
  </div>
 </div>
</div>

