<p id="notice"></p>
<div class="container">
 <div class="row">
  <div class ="mx-auto">
    <%= flash[:notice] %>

    <h2>ユーザー登録</h2>

    <%= form_with model:@user, url: user_registration_path do |f| %>
      <%= render "user/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :ユーザーネーム %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
      </div>

      <div class="field">
        <%= f.label :eメール %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :パスワード %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :パスワード（確認用） %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
      <br>

      <div class="actions">
        <%= f.submit "ユーザー登録", class: "btn btn-success" %>
      </div>
    <% end %>
    <br>
    <%= link_to new_user_session_path, class: "btn btn-primary" do %>
     <%= "ログイン画面へ" %>
    <% end %>
  </div>
 </div>
</div>
