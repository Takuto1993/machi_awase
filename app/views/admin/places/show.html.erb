
    <div>
     <h4>待ち合わせ詳細</h4>
     <%= link_to "編集", edit_admin_place_path(@place.id) %>
     <div>
       <p>件名:<%= @place.subject %></p>
       <p>投稿ユーザー:<%= link_to @place.user.name, admin_user_path(@place.user.id) %></p>
       <p>本文</p>
       <%= @place.body %>
       <p>待ち合わせ場所:<%= @place.address %></p>

         <% #googlemapを表示 %>
         <% if @place.latitude == nil %>
          <%= "位置情報を所得できませんでした。" %>
         <% elsif @place.longitude == nil %>
          <%= "位置情報を所得できませんでした。" %>
         <% else %>
          <div id="map"></div>

          <style>
           #map{
             height: 400px;
           }
          </style>

          <script>
           function initMap(){

            var mark = {lat: <%= @place.latitude %>, lng: <%= @place.longitude %>};
            var map = new google.maps.Map(document.getElementById('map'), {
                      zoom: 20,
                      center: mark
                      });
            var transitLayer = new google.maps.TransitLayer();
            transitLayer.setMap(map);

            var contentString = '住所:<%= @place.address %>';
            var infowindow = new google.maps.InfoWindow({
             content: contentString
            });

            <% #MAP上の指定場所をピンで表示 %>
            var marker = new google.maps.Marker({
                      position: mark,
                      map: map,
                      title: contentString
                      });

            marker,addListener('click', function() {
             infowindow.open(map, marker);
            });
           }
          </script>
          <script async defer src="https://maps.googleapis.com/maps/api/js?key=<%= ENV['API_KEY'] %>&callback=initMap">
          </script>
         <% end %>
         
        <% if @place.latitude == nil %>
        <% else %>
         <p>緯度:<%= @place.latitude %></p>
        <% end %>
        <% if @place.longitude == nil %>
        <% else %>
         <p>経度:<%= @place.longitude %></p>
        <% end %>

       <p>待ち合わせ目印:<%= @place.spot %></p>
       <p>待ち合わせ日時:<%= @place.place_at %></p>

        <h4>参加者</h4>
        <p>★参加数<%= @place.join_places.count %>人</p>
        <% @place.join_places.each do |join_place| %>
         <%= link_to join_place.user.name, admin_user_path(join_place.user.id) %>
        <% end %>

     </div>
    </div>

       <div>
         <h4>コメント一覧</h4>
         <p>コメント件数:<%= @place.place_comments.count %></p>
         <table class='table table-hover table-inverse'>
          <% @place.place_comments.each do |place_comment| %>
          <thead>
            <tr>
              <th><%= place_comment.id %></th>
              <th><%= link_to place_comment.user.name, admin_user_path(place_comment.user.id) %></th>
              <th><%= place_comment.created_at.strftime('%Y/%m/%d/ %H:%M:%S') %></th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>

              </td>
              <td>
               <%= place_comment.comment %>
              </td>
              <td>
                <% if place_comment.user == current_admin %>
                 <%= link_to "削除", place_place_comment_path(place_comment.place, place_comment), method: :delete, "date-confirm"  => "コメントを削除しますか？" %>
                <% end %>
              </td>
            </tr>
          <% end %>
          </tbody>
         </table>
         <h4>コメント投稿フォーム</h4>
         <div>
           <%= form_with model: [@place, @place_comment] do |f| %>
            <%= f.text_area :comment, rows: '5', placeholder: "コメントはこちら" %>
            <%= f.submit "送信" %>
           <% end %>
         </div>
       </div>
   </div>
  </div>
 </div>
