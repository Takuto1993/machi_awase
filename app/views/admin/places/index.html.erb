<p id="notice"></p>
<div class="container">
 <div class="row">
  <div class ="mx-auto">
    <h3>待ち合わせ一覧</h3>
    
    <% #検索フォーム %>
    <%= form_tag({controller:"places",action:"index"}, method: :get) do %>
     <%= text_field_tag :search %>
     <%= submit_tag '検索する' %>
    <% end %>

      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th>投稿者</th>
            <th>件名</th>
            <th>コメント数</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
        <% @places.each do |place| %>
          <tr>
            <td>
              <%= link_to admin_user_path(place.user.id) do %>
               <%= place.user.name %>
              <% end %>
            </td>
            <td>
              <%= link_to admin_place_path(place.id) do %>
                <%= place.subject %>
              <% end %>
            </td>
            <td>
              <%= "#{place.place_comments.count} コメント" %>
            </td>
          </tr>
        <% end %>
        <%= paginate @places %>
        </tbody>
      </table>
  </div>
 </div>
</div>

