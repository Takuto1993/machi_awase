<<p id="notice"></p>
<div class="container">
 <div class="row">
  <div class ="mx-auto">
    <h3>ユーザー詳細画面</h3>
    <div>
      <p>ユーザーネーム:<%= @user.name %></p>
      <p>メールアドレス:<%= @user.email %></p>
      <p>退会ステータス：<%= @user.is_deleted ? '退会' : '有効' %></p>
      <%= link_to edit_admin_user_path(@user.id), class: "btn btn-primary" do %>
       <%= "登録情報変更" %>
      <% end %>
    </div>
  </div>
 </div>
</div>