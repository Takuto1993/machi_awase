<p id="notice"></p>
<div class="container">
 <div class="row">
  <div class ="mx-auto">
    <h3>ユーザー一覧</h3>

    <% #検索フォーム %>
    <%= form_tag({controller:"users",action:"index"}, method: :get) do %>
     <%= text_field_tag :search %>
     <%= submit_tag '検索する' %>
    <% end %>

      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th>ユーザーネーム</th>
            <th>退会ステータス</th>
            <th></th>
            <th></th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
        <% @users.each do |user| %>
          <tr>
            <td>
              <%= link_to admin_user_path(user.id) do %>
                <%= user.name %>
              <% end %>
            </td>
            <td>
              <%= user.is_deleted ? '退会' : '有効' %>
            </td>
            <td>
              <%= link_to edit_admin_user_path(user.id) do %>
               <%= "顧客情報編集" %>
              <% end %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
  </div>
 </div>
</div>

