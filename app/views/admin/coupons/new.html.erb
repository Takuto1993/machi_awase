<p id="notice"></p>
 <div class="container">
  <div class="row">
   <div class ="mx-auto">
     <h3>クーポン新規作成</h3>
     <% if @coupon.errors.any? %>
       <%= @coupon.errors.count %>件のエラーが発生しました
       <ul>
         <% @coupon.errors.full_messages.each do |message| %>
           <li><%= message %></li>
         <% end %>
       </ul>
     <% end %>
     <%= form_with model: @coupon, url: '/admin/coupons' do |f| %>
      <h4>使えるお店</h4>
       <%= f.text_field :shop, size: "60x10" %>
      <h4>クーポン名</h4>
       <%= f.text_field :coupon_name, size: "60x10" %>
      <h4>使用期限</h4>
       <%= f.date_field :from_day, use_month_numbers: true, class: 'form-control date-picker' %><%= "から" %><br>
       <%= f.date_field :to_day, use_month_numbers: true, class: 'form-control date-picker' %><%= "まで" %>
      <h4>内容</h4>
       <%= f.text_area :content, size: "40x10" %><br>
      <%= f.submit 'クーポン新規作成', class:"btn btn-success" %>
    <% end %>
   </div>
  </div>
 </div>